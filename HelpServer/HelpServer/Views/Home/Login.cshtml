@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br" ng-app="helpApp">
<head>
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width">
    <meta charset="UTF-8">
    <title>HELP!</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/animate.min.css">
    <link rel="stylesheet" href="~/Content/css/site.css">
    <link rel="stylesheet" href="~/Content/css/sweetalert.css">
    <link rel="stylesheet" href="~/Content/css/loading.css">
    <link rel="stylesheet" href="~/Content/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/Content/css/datatables.bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <div style="text-align: center;">
            <img src="~Views/img/help-logo.jpg" class="animated bounceIn" />
        </div>
        <form ng-submit="login(log)" name="loginForm">
            <div class="form-group">
                <label for="emailInput">E-mail</label>
                <input type="text" id="emailInput" class="form-control" required ng-model="log.userName">
            </div>
            <div class="form-group">
                <label for="passInput">Senha</label>
                <input type="password" id="passInput" class="form-control" required ng-model="log.password">
            </div>
            <div class="form-group">
                <a class="btn btn-vermelho" ng-href="#/cadastro">Cadastrar</a>
                <button class="btn btn-vermelho" style="float: right;" type="submit" ng-disabled="loginForm.$invalid">Entrar</button>
            </div>
        </form>
        <div class="hidden-xs" style="text-align: center; font-style: italic; margin-top: 100px;">
            <span>{{$root.slogan}}</span>
        </div>
    </div>

    <div class="loading">
        <span class="item-1"></span>
        <span class="item-2"></span>
        <span class="item-3"></span>
        <span class="item-4"></span>
        <span class="item-5"></span>
        <span class="item-6"></span>
        <span class="item-7"></span>
    </div>

    <script type="text/javascript" src="~/Scripts/js/jquery-1.12.4.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/angular-route.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/angular-datatables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/angular-datatables.bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/ng-sweet-alert.js"></script>
    <script type="text/javascript" src="~/Scripts/js/app/app.js"></script>
    <script type="text/javascript" src="~/Scripts/js/app/controllers.js"></script>
    <script type="text/javascript" src="~/Scripts/js/app/services.js"></script>
</body>
</html>

